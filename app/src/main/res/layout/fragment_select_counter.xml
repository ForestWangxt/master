<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kpi.activity.SelectCounterActivity">


    <android.support.v7.widget.Toolbar
        android:id="@+id/selectCounter_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/AppTheme.PopupOverlay">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="工作中"
            android:textColor="#fff"
            android:textSize="20sp" />
    </android.support.v7.widget.Toolbar>

    <TextView
        android:id="@+id/tv_work_NearbyShop"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_below="@+id/selectCounter_toolbar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/oval"
        android:gravity="center"
        android:text="附近商户"
        android:textColor="#fff"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_work_NearbyBusiness"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_below="@+id/tv_work_NearbyShop"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/oval_business"
        android:gravity="center"
        android:text="商户"
        android:textColor="#fff"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_work_contacts"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_below="@+id/tv_work_NearbyBusiness"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/oval_contacts"
        android:gravity="center"
        android:text="联系人"
        android:textColor="#fff"
        android:textSize="20sp" />


</RelativeLayout>
